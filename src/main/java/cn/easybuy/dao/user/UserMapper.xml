<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easybuy.dao.user.UserMapper">
    <insert id="add" parameterType="User">
        INSERT into easybuy_user(loginName,userName,password,sex,identityCode,email,mobile)
        values(#{loginName},#{userName},#{password},#{sex},#{identityCode},#{email},#{mobile})
    </insert>
    <select id="getUser" resultType="User">
        SELECT * FROM `easybuy_user`
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="loginName != null and loginName != ''">
                and loginName = #{loginName}
            </if>
        </where>
    </select>
    <select id="count" resultType="Integer">
        SELECT count(*) FROM easybuy_user
    </select>
    <update id="update" parameterType="User">
        update easybuy_user
        <set>
            <if test="loginName != null and loginName != ''">
                loginName = #{loginName},
            </if>
            <if test="userName != null and userName != ''">
                userName = #{userName},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="identityCode != null and identityCode != ''">
                identityCode = #{identityCode},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUserById" parameterType="Integer">
        delete from easybuy_user where id = #{id}
    </delete>
    <select id="getUserList" resultType="User">
        select * from easybuy_user
        limit #{currentPageNo},#{pageSize}
    </select>
</mapper>